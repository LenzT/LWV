<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" 
    android:id="@+id/row_geberView">
    
    	<Spinner
        android:id="@+id/spinnerGeber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:gravity="center">
        <requestFocus />
        </Spinner>
    
    	<ImageButton
        android:id="@+id/buttonDeleteGeber"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:src="@drawable/remove_button_md"
        android:background="@android:color/transparent" 
        android:onClick="onDeleteClicked"/>

	</LinearLayout>
	
    <Button
        android:id="@+id/btnAddNewWork"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:onClick="onAddNewWorkClicked"
        android:paddingLeft="5dp"
        android:background="@drawable/add_button_md"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textColor="@android:color/darker_gray" />
    

</LinearLayout>
